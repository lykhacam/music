<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="@dimen/_16sdp"
    android:paddingStart="@dimen/_16sdp"
    android:paddingEnd="@dimen/_16sdp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvMySongsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🎵 Bài hát của tôi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- RecyclerView danh sách bài hát -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommendationRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMySongsTitle"
        app:layout_constraintBottom_toTopOf="@+id/tvEmptyRecommendation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_song"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- TextView khi không có bài hát -->
    <TextView
        android:id="@+id/tvEmptyRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có bài hát nào"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/recommendationRecycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
