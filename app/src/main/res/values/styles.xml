<resources>
    <!-- Theme cho BottomSheetDialogFragment -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:drawableStart">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#222222</item>
    </style>
    <style name="Theme.MusicApp.BottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Material3.BottomSheet.Modal</item>
    </style>
    <style name="WhiteTextTheme">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="RadioWhiteTheme">
        <item name="android:buttonTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="WhiteTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white_selector</item>
        <item name="endIconTint">@android:color/white</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="hintTextColor">@color/text_input_hint_color</item>
    </style>

</resources>
